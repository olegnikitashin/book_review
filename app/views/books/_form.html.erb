<%= simple_form_for @book do |f| %>
  <%= f.collection_select :category_id, Category.all.order("name ASC"), :id, :name, { promt: "Choose a category" }, class: "dropdown-toggle" %>
  <%= f.file_field :image %>
  <%= f.input :title, label: "Book Title"%>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>
